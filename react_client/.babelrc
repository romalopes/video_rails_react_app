{
  "presets": [
    "@babel/preset-env",
    [
      "@babel/preset-react",
      { "runtime": "automatic" }
      // Needed to remove the react import when running tests { "runtime": "automatic" }
    ]
  ],
  "plugins": [
    "@babel/plugin-transform-runtime",
    ["babel-plugin-transform-import-meta", { "module": "ES6" }]
  ]
}
